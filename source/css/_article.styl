  .string
  .tag .value
  .phpdoc
  .tex .formula
  .regexp
  .hexcolor
    color #98c379

  .title
  .localvars
  .chunk
  .decorator
  .built_in
  .identifier
  .vhdl
  .literal
  .id
  .function
    color #268bd2

  .attribute
  .variable
  .lisp .body
  .smalltalk .number

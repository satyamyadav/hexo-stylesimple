<nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top ">
  <% if(config.logo) { %>
    <a class="navbar-brand" href="<%- url_for() %>" id="logo">
      <img class="img-fluid" src="<%= config.logo  %>" alt="">
    </a>
  <% } else if (!theme.banner) { %>
    <a class="navbar-brand" href="<%- url_for() %>" id="logo">
      <%= config.title  %>
    </a>
  <% } else { %>
  <% } %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav mr-auto">
      <% for (var i in theme.menu){ %>
        <li class="nav-item">
          <a class="nav-link" href="<%- url_for(theme.menu[i]) %>"><%= i %></a>
        </li>
      <% } %>
    </ul>
    <% if (theme.rss){ %>
      <a id="nav-rss-link" class="navbar-text" href="<%- url_for(theme.rss) %>" title="<%= __('rss_feed') %>"></a>
    <% } %>

    <form class="form-inline my-2 my-lg-0">
      <%- search_form({button: false, class: "form-control-sm o"}) %>
    </form>
  </div>
</nav>

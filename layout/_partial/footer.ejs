<% if(theme.social) { %> 
  <div class="container mt-5 pt-5">
    <nav class="nav nav-pills justify-content-center text-white">
    <% theme.social.forEach(function(s) { %> 
      <a class="nav-link p-3 rounded-circle m-1 bg-light" href="<%= s.url %>" target="__blank">
        <%- s.icon || '' %>
      </a>
      <% }) %>
    </nav>
  </div>
<% } %>
    

<footer class="footer pb-5">
  <hr>
  <div class="container text-muted text-center">
    &copy;
    <%= date(new Date(), 'YYYY') %>
    <%= config.author || config.title %><br>
    <%= __('powered_by') %> <a href="http://hexo.io/" target="_blank">Hexo</a>

  </div>
</footer>

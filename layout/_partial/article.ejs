<%
var readMoreUrl = url_for(post.path);
var readMoreText = theme.excerpt_link || 'Read more';
%>

<article id="<%= post.layout %>-<%= post.slug %>" class="col-12 mb-3 article-type-<%= post.layout %>" itemscope itemprop="blogPost">
  <div class="card <%= theme.classes.postCard %>">
    <%- partial('card/image', {style: 'card-img-top'}) %>
    <div class="card-body pl-0 pr-0 blog-post">
      <%- partial('card/date', {class_name: 'small text-secondary', date_format: config.date_format || 'MMM Do YY'}) %>
      <% if (post.link || post.title){ %>
        <%- partial('card/title', {class_name: 'card-title mb-0'}) %>
      <% } %>

        <% if (post.excerpt){ %>
          <div class="card-text pr-1 pl-1 pt-3 text-secondary">
            <%- post.excerpt %>
            <% readMoreUrl = readMoreUrl + '#more' %>
            <a href="<%- readMoreUrl %>">
              <%= readMoreText %>
            </a>
          </div>
        <% } else { %>
          <a href="<%- readMoreUrl %>">
            <%= readMoreText %>
          </a>
        <% }  %>
    </div>
    <div class="article-footer border-0 row m-0">
      <div class="col pl-0">
        <%- partial('card/tag') %>
        <%- partial('card/category') %>
      </div>
      <div class=" float-right">
        <a title="<%= __('share') %>" data-url="<%- post.permalink %>" data-id="<%= post._id %>" class="ml-2 article-share-link float-right">
          <%- theme.icons.share %>
        </a>
        <% if (post.comments && config.disqus_shortname){ %>
          <!-- <span class="float-right text-secondary pl-2">|</span> -->
          <a title="<%= __('comment') %>" href="<%- post.permalink %>#disqus_thread" class="article-comment-link float-right">
            <%- theme.icons.comment %>
          </a>
        <% } %>
      </div>
    </div>
    <hr>
</div>
</article>

<% if (!index && post.comments && config.disqus_shortname){ %>
<section id="comments">
  <div id="disqus_thread">
    <noscript>Please enable JavaScript to view the <a href="//disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
  </div>
</section>
<% } %>

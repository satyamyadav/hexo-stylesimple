

  <div class="card border-0" style="height:460px">
    <% if (post.photos && post.photos.length || post.cover){ %>
      <img height="460" class="bg-secondary card-img" src="<%= post.cover || post.photos[0] %>" alt="Card image">
    <% } %>
    <div class="card-img-overlay pt-5" style="background: rgba(0,0,0,0.7)">
      <div class="container text-center">
        <div class="row">

          <div class="col-12">
            <h3 class="d-none d-md-block display-4 text-white mt-3">
              <%= post.title %>
            </h3>
            <h4 class="d-block d-md-none text-white mt-1">
              <%= post.title %>
            </h4>
          </div>
          <div class="col-12 pt-1 text-white">
            <p class="lead">
              <i>
              <%= config.author %>
              </i>
              <div class="small">
                <%- partial('card/date', {class_name: 'text-white', date_format: config.date_format || 'MMM Do YY'}) %>
              </div>
            </p>

            <div class="text-center">
              <%- partial('post/category') %>
            </div>

            <div class="text-center pt-2">
              <%- partial('post/tag') %>
            </div>

            <div class="text-center pt-4">
              <div data-url="<%- post.permalink %>" data-id="<%= post._id %>" class="article-share-link btn btn-primary btn-sm text-uppercase"><%= __('share') %></div>
            </div>

          </div>

        </div>

      </div>
    </div>
  </div>

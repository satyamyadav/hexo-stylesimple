

  <% if (post.photos && post.photos.length || post.cover){ %>
  <div class="card border-0" style="height:460px">
      <img height="460" class="bg-secondary card-img" src="<%= post.cover || post.photos[0] %>" alt="Card image">
      <div class="card-img-overlay pt-5" style="background: rgba(0,0,0,0.7)">
        <div class="container text-center">
          <div class="row">
            
            <div class="col-12">
              <h2 class="d-none d-md-block text-white mt-3 font-weight-light">
                <%= post.title %>
              </h2>
              <h4 class="d-block d-md-none text-white mt-1">
                <%= post.title %>
              </h4>
              <span class="small">
                <%- partial('card/date', {class_name: 'text-white', date_format: config.date_format || 'MMM Do YY'}) %>
              </span>
            </div>
            <div class="col-12 pt-1 text-white">
              <p class="lead">
                <i>
                  <%= config.author %>
                </i>
              </p>
              
              <div class="text-center">
                <%- partial('post/category', {classList: 'text-white'}) %>
                <%- partial('post/tag', {classList: 'text-white'}) %>
              </div>
              
              
              <div class="text-center pt-4">
                <div data-url="<%- post.permalink %>" data-id="<%= post._id %>" class="article-share-link btn btn-outline-light btn-sm text-uppercase"><%= __('share') %></div>
              </div>
              
            </div>
            
          </div>
          
        </div>
      </div>
    </div>
    <% } else { %>

    <div class="card border-0 bg-light">
      <div class="pt-5 pb-5">
        <div class="container text-center">
          <div class="row">
    
            <div class="col-12">
              <h2 class="font-weight-light d-none d-md-block  mt-3">
                <%= post.title %>
              </h2>
              <h4 class="d-block d-md-none  mt-1">
                <%= post.title %>
              </h4>
              <span class="small ml-3">
                <%- partial('card/date', {class_name: '', date_format: config.date_format || 'MMM Do YY'}) %>
              </span>
            </div>
            <div class="col-12 pt-1 ">
              <p class="">
                <i>
                  - <%= config.author %>
                </i>
              </p>
    
              <div class="text-center">
                <%- partial('post/category') %>
                <%- partial('post/tag') %>
              </div>
    
    
              <div class="text-center pt-4">
                <div data-url="<%- post.permalink %>" data-id="<%= post._id %>" class="article-share-link btn btn-outline-secondary btn-sm text-uppercase">
                  <%= __('share') %>
                </div>
              </div>
    
            </div>
    
          </div>
    
        </div>
      </div>
    </div>

    <% } %>
    